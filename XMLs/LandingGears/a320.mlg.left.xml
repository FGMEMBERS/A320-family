<?xml version="1.0"?>

<PropertyList>
	<path>../../Models/LandingGears/a320.mlg.left.3ds</path> 
	<!--texture-path>../Textures/Livery/House</texture-path-->
	
	<model>
		<name>Main Tires</name>
		<path>Aircraft/A320-family/XMLs/LandingGears/a320.mlg.tires.xml</path>
	</model>
	
	<!-- Disable shoadow for the following objects. -->
	<animation>
		<name>Axle</name>
		<type>noshadow</type>
		<object-name>AXLE</object-name>
	</animation>
	
	<animation>
		<name>Drag_Structs.Upper.NoShadow</name>
		<type>noshadow</type>
		<object-name>D_STRUCT.U</object-name>
	</animation>
	
	<animation>
		<name>Torque_Links.01</name>
		<type>noshadow</type>
		<object-name>LINK.01</object-name>
	</animation>
	
	<animation>
		<name>Torque_Links.02</name>
		<type>noshadow</type>
		<object-name>LINK.02</object-name>
	</animation>
	
	<!-- Gear retraction sequence. -->
	<animation>
		<name>Drag_Structs.Upper</name>
		<type>rotate</type>
		<object-name>Drag_Structs.Upper.NoShadow</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>-45</dep></entry>
			<entry><ind>0.2</ind><dep>-45</dep></entry>
			<entry><ind>0.8</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>0.0</dep></entry>
		</interpolation>
		<axis>
			
			<x1-m>-1.4893271</x1-m>
			<y1-m>1.1873577</y1-m>
			<z1-m>2.5347477</z1-m>
			
			<x2-m>-1.4018692</x2-m>
			<y2-m>1.2766404</y2-m>
			<z2-m>2.5369136</z2-m>
			
		</axis>
	</animation>
	
	<animation>
		<name>Drag_Structs.Lower</name>
		<type>rotate</type>
		<object-name>D_STRUCT.L</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>45.0</dep></entry>
			<entry><ind>0.2</ind><dep>45.0</dep></entry>
			<entry><ind>0.8</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>0.0</dep></entry>
		</interpolation>
		<axis>
			
			<x1-m>-0.3569210</x1-m>
			<y1-m>0.1076174</y1-m>
			<z1-m>1.2222185</z1-m>
			
			<x2-m>-0.2671443</x2-m>
			<y2-m>0.1992673</y2-m>
			<z2-m>1.2244419</z2-m>
			
		</axis>
	</animation>
	
	<animation>
		<name>Retraction</name>
		<type>rotate</type>
		<object-name>Axle</object-name>
		<object-name>Drag_Structs.Lower</object-name>
		<object-name>FITTING</object-name>
		<object-name>Main Tires</object-name>
		<object-name>OLEO</object-name>
		<object-name>Torque_Links.01</object-name>
		<object-name>Torque_Links.02</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>80.5</dep></entry>
			<entry><ind>0.2</ind><dep>80.5</dep></entry>
			<entry><ind>0.8</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>0.0</dep></entry>
		</interpolation>
		<axis>
			
			<x1-m>-1.1054902</x1-m>
			<y1-m>0.0075</y1-m>
			<z1-m>2.7435568</z1-m>
			
			<x2-m>-0.2681111</x2-m>
			<y2-m>-0.0129338</y2-m>
			<z2-m>2.8588708</z2-m>
			
		</axis>
	</animation>
	
	<animation>
		<name>Selection</name>
		<type>select</type>
		<object-name>Retraction</object-name>
		<condition>
			<greater-than>
				<property>/gear/gear[1]/position-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
</PropertyList>
