<?xml version="1.0"?>

<PropertyList>
	<path>../../Models/LandingGears/a320.nlg.3ds</path> 
	<!--texture-path>../Textures/Livery/House</texture-path-->
	
	<model>
		<name>Nose Tires</name>
		<offsets>
			<x-m>-0.3061469</x-m>
			<z-m>-1.9329357</z-m>
			<pitch-deg>9</pitch-deg>
		</offsets>
		<path>Aircraft/A320-family/XMLs/LandingGears/a320.nlg.tires.xml</path>
	</model>
	
	<!-- Disable shoadow for the following objects. -->
	<animation>
		<name>Axle</name>
		<type>noshadow</type>
		<object-name>AXLE</object-name>
	</animation>
	
	<animation>
		<name>Drag_Structs.Upper.NoShadow</name>
		<type>noshadow</type>
		<object-name>D_STRUCT.U</object-name>
	</animation>
	
	<animation>
		<name>Main_Fitting</name>
		<type>noshadow</type>
		<object-name>FITTING</object-name>
	</animation>
	
	<animation>
		<name>Torque_Links.01</name>
		<type>noshadow</type>
		<object-name>LINK.01</object-name>
	</animation>
	
	<animation>
		<name>Torque_Links.02</name>
		<type>noshadow</type>
		<object-name>LINK.02</object-name>
	</animation>
	
	<!-- Steering animation. -->
	<animation>
		<name>Bogey</name>
		<type>rotate</type>
		<object-name>Axle</object-name>
		<object-name>Nose Tires</object-name>
		<object-name>OLEO</object-name>
		<object-name>Torque_Links.01</object-name>
		<object-name>Torque_Links.02</object-name>
		<property>/gear/gear[0]/steering-norm</property>
		<factor>75</factor>
		<axis>
			<x2-m>-0.3582729</x2-m>
			<z2-m>-1.9424235</z2-m>
		</axis>
	</animation>
	
	<!-- Gear retraction sequence. -->
	<animation>
		<name>Drag_Structs.Upper</name>
		<type>rotate</type>
		<object-name>Drag_Structs.Upper.NoShadow</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>-47.0</dep></entry>
			<entry><ind>0.2</ind><dep>-47.0</dep></entry>
			<entry><ind>0.8</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>0.0</dep></entry>
		</interpolation>
		<center>
			<x-m>-1.2555145</x-m>
			<z-m>0.7123210</z-m>
		</center>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<name>Drag_Structs.Lower</name>
		<type>rotate</type>
		<object-name>D_STRUCT.L</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>45.0</dep></entry>
			<entry><ind>0.2</ind><dep>45.0</dep></entry>
			<entry><ind>0.8</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>0.0</dep></entry>
		</interpolation>
		<center>
			<x-m>-0.3230188</x-m>
			<z-m>-0.7549622</z-m>
		</center>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<name>Retraction</name>
		<type>rotate</type>
		<object-name>ACUTATOR</object-name>
		<object-name>Bogey</object-name>
		<object-name>Drag_Structs.Lower</object-name>
		<object-name>Main_Fitting</object-name>
		<object-name>LINK.FIT</object-name>
		<property>/gear/gear[0]/position-norm</property>
		<interpolation>
			<entry><ind>0.0</ind><dep>92.0</dep></entry>
			<entry><ind>0.2</ind><dep>92.0</dep></entry>
			<entry><ind>0.8</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>0.0</dep></entry>
		</interpolation>
		<axis>
			<y>1</y>
		</axis>
	</animation>
	
	<animation>
		<name>Selection</name>
		<type>select</type>
		<object-name>Retraction</object-name>
		<object-name>Drag_Structs.Upper</object-name>
		<condition>
			<greater-than>
				<property>/gear/gear[0]/position-norm</property>
				<value>0</value>
			</greater-than>
		</condition>
	</animation>
	
</PropertyList>
