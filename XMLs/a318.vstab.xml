<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>../Models/a318.vstab.ac</path> 

	<!-- Animation for the rudder -->
	<animation>
		<name>Rudder</name>
		<type>rotate</type>
		<object-name>Rudder</object-name>
		<property>surface-positions/rudder-pos-norm</property>
		<factor>25</factor>
		<axis>
			<x1-m>3.87</x1-m>
			<y1-m>0</y1-m>
			<z1-m>1.927</z1-m>
			<x2-m>6.403</x2-m>
			<y2-m>0</y2-m>
			<z2-m>8.667</z2-m>
		</axis>
	</animation>

	<!-- Animation for the logo light -->
	<animation>
		<name>Logo light illumination</name>
		<type>material</type>
		<object-name>Vstab</object-name>
		<object-name>Rudder</object-name>
		<condition>
			<equals>
				<property>controls/lighting/nav-lights-switch</property>
				<value>2</value>
			</equals>
		</condition>
		<emission>
			<red>0.25</red>
			<green>0.25</green>
			<blue>0.25</blue>
		</emission>
	</animation>

	<!-- LIVERY SELECT -->
	<!-- Animation -->
	<animation>
		<type>material</type>
		<object-name>Vstab</object-name>
		<property-base>sim/model/livery</property-base>
		<texture-prop>texture-path[0]</texture-prop>
		<texture>A318-BAW.png</texture>
	</animation>

</PropertyList>
