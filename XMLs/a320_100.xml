<?xml version="1.0"?>

<PropertyList include="a320.fuselage.xml">
	<offsets>
		<x-m>-18.8499</x-m>
		<z-m>1.7005004</z-m>
	</offsets>
	
	<model>
		<name>Flightdeck</name>
		<path>Aircraft/A320-family/XMLs/FlightDeck/a320.flightdeck.xml</path>
		<offsets>
			<x-m>21.27</x-m>
			<z-m>2.184</z-m>
		</offsets>
	</model>
	
	<model>
		<name>Interior</name>
		<path>Aircraft/A320-family/XMLs/Interior/a320.interior.xml</path>
	</model>
	
	<model>
		<name>Nose Gear</name>
		<path>Aircraft/A320-family/XMLs/LandingGears/a320.nlg.xml</path>
		<offsets>
			<x-m>7.83</x-m>
			<z-m>-1.8306008</z-m>
		</offsets>
	</model>
	
	<model>
		<name>Main Gears.Left</name>
		<path>Aircraft/A320-family/XMLs/LandingGears/a320.mlg.left.xml</path>
		<offsets>
			<x-m>20.3180764</x-m>
			<y-m>-3.795</y-m>
			<z-m>-3.9469424</z-m>
		</offsets>
	</model>
	
	<model>
		<name>Main Gears.Right</name>
		<path>Aircraft/A320-family/XMLs/LandingGears/a320.mlg.right.xml</path>
		<offsets>
			<x-m>20.3180764</x-m>
			<y-m>3.795</y-m>
			<z-m>-3.9469424</z-m>
		</offsets>
	</model>
	
	<model>
		<path>Aircraft/A320-family/XMLs/Wings/a320.wings.xml</path>
		<offsets>
			<x-m>15.280</x-m>
			<z-m>-1.06019</z-m>
		</offsets>
	</model>
	
	<model>
		<name>Horizontal Stabilizer</name>
		<path>Aircraft/A320-family/XMLs/a320.hstab.xml</path>
		<offsets>
			<!--<x-m>52.01</x-m>-->
			<x-m>34.1512207</x-m>
			<pitch-deg>0.0</pitch-deg>
		</offsets>
	</model>
	
	<model>
		<name>Vertical Stabilizer</name>
		<path>Aircraft/A320-family/XMLs/a320.vstab.xml</path>
		<offsets>
			<x-m>32.2535728</x-m>
		</offsets>
	</model>
	
	<!-- Make the flightdeck invisible from outside views.  This is a temporary measure until we have a
	     more realistic 3D cockpit. -->
	<animation>
		<type>select</type>
		<object-name>Flightdeck</object-name>
		<condition>
			<equals>
				<property>sim/current-view/view-number</property>
				<value>0</value>
			</equals>
		</condition>
	</animation>
	
	<!-- Since the exterior model is double-sided at the moment, it will have to be invisible when we
	     are in inside view. -->
	<animation>
		<name>Exterior.Hide</name>
		<type>select</type>
		<object-name>COCKPIT</object-name>
		<object-name>FUSELAGE</object-name>
		<object-name>WINDSHIELD</object-name>
		<condition>
			<not>
				<equals>
					<property>sim/current-view/view-number</property>
					<value>0</value>
				</equals>
			</not>
		</condition>
	</animation>
</PropertyList>
