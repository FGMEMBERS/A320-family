<?xml version="1.0" encoding="UTF-8" ?>

<!-- Airbus A320 for FlightGear -->
<!-- Mode Control Panel -->

<PropertyList>

	<path>../../../Models/Instruments/MCP/MCP.ac</path>

	<!-- ANIMATIONS -->
	<!-- Power on/off -->
	<animation>
		<name>Power on/off</name>
		<type>select</type>
		<object-name>LEDScreensOff</object-name>
		<condition>
			<less-than>
				<property>systems/electrical/outputs/efis</property>
				<value>15</value>
			</less-than>
		</condition>
	</animation>

	<!-- Altimeter pressure setting -->
	<animation>
		<name>Altitude pressure 10's</name>
		<type>textranslate</type>
		<object-name>AltPressure10</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>0.01</factor>
		<step>10</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Altitude pressure 1's</name>
		<type>textranslate</type>
		<object-name>AltPressure1</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>0.1</factor>
		<step>1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Altitude pressure .1's</name>
		<type>textranslate</type>
		<object-name>AltPressure.1</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<step>0.1</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Altitude pressure .01's</name>
		<type>textranslate</type>
		<object-name>AltPressure.01</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>10</factor>
		<step>0.01</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	<animation>
		<name>Altimeter pressure knobs pick</name>
		<type>pick</type>
		<object-name>AltPressureKnbL</object-name>
		<object-name>AltPressureKnbR</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<step>0.01</step>
				<max>99.99</max>
			</binding>
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<step>-0.01</step>
				<min>0</min>
			</binding>
		</action>
	</animation>
	<animation>
		<name>Altimeter pressure left knob rotate</name>
		<type>rotate</type>
		<object-name>AltPressureKnbL</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>100</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>-0.204</y-m>
			<z-m>-0.015</z-m>
		</center>
	</animation>
	<animation>
		<name>Altimeter pressure right knob rotate</name>
		<type>rotate</type>
		<object-name>AltPressureKnbR</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<factor>100</factor>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0.204</y-m>
			<z-m>-0.015</z-m>
		</center>
	</animation>

