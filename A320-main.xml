			<starter type="bool">false</starter>
			<running type="bool">false</running>
			<on-fire type="bool">false</on-fire>
			<reverser-pos-norm type="double">0</reverser-pos-norm>
		</engine>
		<engine n="1">
			<cutoff type="bool">true</cutoff>
			<starter type="bool">false</starter>
			<running type="bool">false</running>
			<on-fire type="bool">false</on-fire>
			<reverser-pos-norm type="double">0</reverser-pos-norm>
